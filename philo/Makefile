# **************************************************************************** #
#                                   PROGRAM                                    #
# **************************************************************************** #

HEADER		=	philo.h
NAME		=	philo

# **************************************************************************** #
#                                   COMPILER                                   #
# **************************************************************************** #

CC 			=	gcc

CFLAGS		=	-g3 #-Wall -Wextra -Werror

RM			=	rm -f

# **************************************************************************** #
#                                    PATHS                                     #
# **************************************************************************** #

# **************************************************************************** #
#                                   SOURCES                                    #
# **************************************************************************** #

SRC			=	main.c \

OBJ_DIR		=	obj/
OBJ			= 	$(addprefix $(OBJ_DIR), $(SRC:%.c=%.o))

# **************************************************************************** #
#                                    RULES                                     #
# **************************************************************************** #

all: $(NAME)

$(OBJ_DIR)%.o: %.c
	$(CC) $(CFLAGS) -c $< -o $@ 

$(OBJ): | $(OBJ_DIR)

$(OBJ_DIR):
	@mkdir -p $(OBJ_DIR)

$(NAME): $(OBJ)
	$(CC) -o $(NAME) $(OBJ) $(LDFLAGS) 
	@echo "\n\033[32mCompiled! ᕦ(\033[31m♥\033[32m_\033[31m♥\033[32m)ᕤ\n"

clean:
	@$(RM) -rf $(OBJ_DIR)

fclean:				clean
	@$(RM) $(NAME)
	@echo "\n\033[31mDeleting EVERYTHING! ⌐(ಠ۾ಠ)¬\033[37m\n"

re:			fclean all

bonus:		re

.PHONY:		all clean fclean re bonus